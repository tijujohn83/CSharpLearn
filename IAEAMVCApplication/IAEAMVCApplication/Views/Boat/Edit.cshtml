@model IAEADataModel.Boat
@{
    ViewBag.Title = "Edit";
}
<h2>
    Edit Boat Details</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Boat</legend>
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.IsRegistered)
        @Html.HiddenFor(model => model.IsRented)
        <div class="editor-label">
            Boat No.: @Html.DisplayTextFor(model => model.ID)
        </div>        
        <div class="editor-label">
            Name: @Html.DisplayTextFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>        
        <div class="editor-label">
            Hourly Rate:
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HourlyRate)
            @Html.ValidationMessageFor(model => model.HourlyRate)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
